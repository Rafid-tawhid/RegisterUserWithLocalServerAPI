<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"


        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/back"
                android:id="@+id/bactBtn"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                ></ImageView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/amaranth"

                android:gravity="center"
                android:text="Registration"

                android:textAlignment="center"
                android:textColor="#06294f"

                android:textSize="30sp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="300dp">

            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="50dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_icon"
                    android:padding="10dp"
                    android:id="@+id/profileImage"
                    >

                </ImageView>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_ed1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:background="@drawable/ed_bg"
                android:drawableLeft="@drawable/home"

                android:hint="  User Name"

                android:paddingLeft="17dp"
                android:paddingRight="13dp"></com.google.android.material.textfield.TextInputEditText>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_ed2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:background="@drawable/ed_bg"
                android:drawableLeft="@drawable/mail"

                android:hint="  Email"

                android:paddingLeft="17dp"
                android:paddingRight="13dp"></com.google.android.material.textfield.TextInputEditText>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_ed3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:background="@drawable/ed_bg"
                android:drawableLeft="@drawable/call"

                android:hint="  Phone"

                android:paddingLeft="17dp"
                android:paddingRight="13dp"></com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_ed4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="17dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginBottom="15dp"
                android:hint="  Password"
                android:fontFamily="@font/amaranth"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/ed_bg"
                android:drawableLeft="@drawable/pass"
                android:paddingRight="13dp">

            </com.google.android.material.textfield.TextInputEditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/regbtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/btn_bg2"
                android:layout_marginTop="30dp"

                android:text="Create Account"
                android:textColor="@color/white">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
    </LinearLayout>
</ScrollView>